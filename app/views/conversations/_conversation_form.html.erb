<div class="conversation-form">
  <%= form_for conversation, remote: true do |f| %>
    <div class="input-group">
      <span class="input-group-addon">topic:</span>
      <%= f.text_field :topic, class: "form-control"%>
    </div>
    <%= f.submit class: "btn btn-primary", id: "create-conversation" %>
  <% end %>
</div>
