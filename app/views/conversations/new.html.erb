<div class="row col-md-8 col-md-offset-2">

  <h1>Create a conversation on a programming topic</h1>
    <div class="well">
      <div class="conversation-form">
        <%= form_for @conversation do |f| %>
          <div class="input-group">
            <span class="input-group-addon">topic:</span>
            <%= f.text_field :topic, class: "form-control"%>
          </div>
          <%= f.submit class: "btn btn-primary", id: "create-conversation" %>
        <% end %>
      </div>
    </div>

    <%= render partial: 'layouts/flash_errors'%>
</div>
