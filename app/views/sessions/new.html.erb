<h1>Login</h1>

<% if @errors %>
  <ul>
    <% @errors.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<% if @guide %>
  <% if @guide.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-danger">
        The form contains <%= pluralize(@guide.errors.count, "error") %>.
      </div>
      <ul>
      <% @guide.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<% end %>

<% if @traveler %>
  <% if @traveler.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-danger">
        The form contains <%= pluralize(@traveler.errors.count, "error") %>.
      </div>
      <ul>
      <% @traveler.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<% end %>
<div class="loginform">
  <div class="social-buttons">
    <a href="#" class="btn btn-fb"><i class="fa fa-facebook"></i> Facebook</a>
    <a href="#" class="btn btn-tw"><i class="fa fa-twitter"></i> Twitter</a>
  </div>
  <%= form_tag sessions_path do %>

    Email: <%= text_field_tag :email %><br>
    Password: <%= password_field_tag :password %><br>
    <%= submit_tag "Submit" %>

  <% end %>
</div>
