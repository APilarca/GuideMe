 <div class="main-container">
  <header>
    <script>
      var images = new Array('bbb.jpg','eee.jpeg','cappa.jpg', 'pichu.jpg');
      var nextimage=0;
      doSlideshow();

      function doSlideshow(){
        if(nextimage>=images.length){nextimage=0;}
        $('body').css('background-image','url("'+images[nextimage++]+'")')
        .fadeIn(100,function(){
          setTimeout(doSlideshow,10000);
        });
      }
    </script>
    <style>
      border-style: {
        /*background-image: url("pichu.jpg");*/
        background-repeat: no-repeat;
        -webkit-background-size: cover;
        -moz-background-size: cover;
        -o-background-size: cover;
        background-size: cover;
        background-position: center center;
      }
    </style>
    <!-- <h1 class="center_h1">GuideMe</h1> -->

    <%= render 'social_media' %>

    <div class="homeform">
      <h3 class="form-header">LET'S FIND A GUIDE..</h3>
      <div class="search-form">
        <form id="search_form" action="/guides" method="get">

          <input id="city" class="form-radius" type="text" name="location" placeholder= "Destination City" size="50" required>
          <label for="from">From</label>
          <input type="text" class="form-radius" id="from" name="from">
          <label for="to">to</label>
          <input type="text" class="form-radius" id="to" name="to">

          <select class="form-language" name='language' required>
            <option value="" default selected>Language</option>
            <% @languages.each do |language| %>
            <option value=<%= language %>><%= language %></option>
            <% end %>
          </select>
          <input id = "guide-search-but" class="form-radius" type="submit" value="Search">
        </form>
      </div>
    </div>



    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h1 class="modal-title" id="myModalLabel">Create Guide Account</h1>

                <div class="signup-atts">

                  <%= form_for :guide, url: '/guides' do |f| %>

                  <div class="signup-group">First name: <%= f.text_field :first_name, class: "buu"%></div><br>
                  <div class="signup-group">Last name: <%= f.text_field :last_name, class: "buu" %></div><br>
                  <div class="signup-group">Email: <%= f.text_field :email, class: "buu" %></div><br>
                  <div class="signup-group">Language: <%= f.text_field :language, class: "buu" %></div><br>
                  <div class="signup-group">Phone: <%= f.text_field :phone, class: "buu" %></div><br>
                  <div class="signup-group">Location: <%= f.text_field :location, class: "buu" %></div><br>
                  <div class="signup-group">Do you have a car? <%= f.text_field :has_car, class: "buu" %></div><br>
                  <div class="signup-group">Password: <%= f.password_field :password , class: "buu"%></div><br>
                  <div class="signup-group">Password Confirmation: <%= f.password_field :password_confirmation , class: "buu"%><br><br>
                    <%= f.submit "Submit", class: "signup-but"%>

                    <% end %>

              </div>



            </div>
          </div>
        </div>



        <div id='map'></div>
        <div id='city'></div>


      </header>
  <!-- <input id = "city" type="text" name="email" placeholder="Email">
-->
</div>
