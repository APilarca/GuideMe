<center><h1><%= @trip.guide.first_name + " " + @trip.guide.last_name %><br></h1></center>

<div class="container">
  Guide: <%= @trip.guide.first_name + " " + @trip.guide.last_name %><br>
  Traveler: <%= @traveler.first_name + " " + @traveler.last_name %><br>
  Location: <%= @trip.location %><br>
  Start Date: <%= @trip.start_date %><br>
  End Date: <%= @trip.end_date %><br>

  <h2>Here are your events:</h2>

  <% session["events"].each do |event| %>
    <p> <%= event %></p>
  <% end %>
</div>

<center><div class="checkout">
  <%= form_tag traveler_charges_path(session[:traveler_id], guide_id: @trip.guide.id, location: @location, interests: session["events"].join(", "), requests: ""), method: :post do %>
    <article>
      <% if flash[:error].present? %>
        <div id="error_explanation">
          <p><%= flash[:error] %></p>
        </div>
      <% end %>
      <p>Booking Guide <b><%= @trip.guide.first_name + " " + @trip.guide.last_name %></b></p>
      <label class="amount">
        <span>Amount: $20.00</span>
      </label>
    </article>

    <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="A month's subscription"
          data-amount="2000"
          data-locale="auto"></script>
  <% end %>
</div></center>