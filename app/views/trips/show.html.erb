<div class="container">
  <h1>Trip Details</h1>

  <p><%= @traveler.first_name + " " + @traveler.last_name %></p>

  <p><b>Guide: </b><%= @guide.first_name + " " + @guide.last_name %></p>

  <h3>Interests</h3>
  <% @trip.interests.split(", ").each do |interest| %>
    <p><%= interest %></p>
  <% end %>
</div>